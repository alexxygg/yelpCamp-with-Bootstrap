<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Add a New Campground</h1>
  <div class="col-6 offset-3">
    <p>Enter the campground's details below!</p>
    <form action="/campgrounds" method="post">
      <div class="mb-4">
        <label class="form-label" for="title">Title:</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
        />
      </div>

      <div class="mb-4">
        <label class="form-label" for="description">Description:</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          cols="30"
          rows="10"
        ></textarea>
      </div>

      <div class="mb-4">
        <label class="form-label" for="location">Location:</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
        />
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <div class="form-floating">
          <input
            type="number"
            class="form-control"
            id="floatingInputGroup1"
            placeholder="Username"
            name="campground[price]"
          />
          <label for="floatingInputGroup1">Price:</label>
        </div>
      </div>

      <div class="mb-4">
        <label class="form-label" for="image">Image URL:</label>
        <input
          class="form-control"
          type="text"
          value="https://random.imagecdn.app/600/600"
          name="campground[image]"
          id="image"
        />
      </div>

      <div class="mb-3">
        <button class="btn bg-success">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">Cancel</a>
  </div>
</div>
